datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Team {
  name    String   @id @unique
  imgUrl  String
  players Player[]
}

model Position {
  position String   @id @unique
  players  Player[]
}

model Player {
  id            Int        @id @default(autoincrement())
  name          String
  imgUrl        String
  age           Int
  dob           String
  height        Int
  weight        Int
  positions     Position[]
  fifaRating    Int
  fifaPotential Int
  jerseyNumber  Int
  currentTeam   String
  teams         Team[]
}
