datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         String    @id @default(cuid())
  email      String    @unique
  password   Password?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime? @updatedAt
  daysPlayed Int       @default(0)
  totalWins  Int       @default(0)
  games      Game[]
}

model Password {
  hash   String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId String @unique
}

model Game {
  id         String   @id @default(cuid())
  datePlayed DateTime @default(now())
  state      String? // 'won' || 'lost' || null
  guesses    Player[]
  User       User?    @relation(fields: [userId], references: [id])
  userId     String?
}

model Team {
  name    String   @id @unique
  imgUrl  String
  players Player[]
}

model Position {
  position String   @id @unique
  players  Player[]
}

model Player {
  id            Int        @id @default(autoincrement())
  name          String
  imgUrl        String
  age           Int
  dob           DateTime
  height        Int
  weight        Int
  positions     Position[]
  fifaRating    Int
  fifaPotential Int
  jerseyNumber  Int
  currentTeam   String
  teams         Team[]
  Game          Game[]
}
